{
  "manifest_version": 3,
  "name": "PowerChat — Queue & Auto‑Send",
  "version": "1.0.0",
  "description": "PowerChat adds handy tools to AI chat UIs. Queue messages and auto‑send the next one when ChatGPT or Claude is ready.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.openai.com/*",
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://*.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": ["icons.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PowerChat — Queue & Auto‑Send"
  }
}

{
  "manifest_version": 3,
  "name": "ChatGPT Queue & Auto-Send",
  "version": "1.0.0",
  "description": "Queue messages and auto-send the next one when ChatGPT is ready.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ],
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://*.openai.com/*"
      ],
      "js": ["icons.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "ChatGPT Queue & Auto-Send"
  }
}
